@page
@model ThePersonalBudgetApp.Pages.IndexModel
@{
    ViewData["Title"] = "Budget Manager";
}

<h1>Budget Manager</h1>

<form method="post">
    <div>
        <label>Title:</label>
        <input asp-for="Budget.Title" />
    </div>
    <div>
        <label>Description:</label>
        <textarea asp-for="Budget.Description"></textarea>
    </div>

    <h2>Incomes</h2>
    <div id="incomes-container">
        @for (int i = 0; i < Model.Budget.Incomes.Count; i++)
        {
            <div>
                <input asp-for="Budget.Incomes[i].Name" placeholder="Category Name" />
                <button type="button" onclick="removeCategory('income', @i)">Remove</button>
                <ul id="income-items-@i">
                    @for (int j = 0; j < Model.Budget.Incomes[i].Items.Count; j++)
                    {
                        <li>
                            <input asp-for="Budget.Incomes[i].Items[j].Name" placeholder="Item Name" />
                            <input asp-for="Budget.Incomes[i].Items[j].Amount" placeholder="Amount" />
                            <button type="button" onclick="removeItem('income', @i, @j)">Remove</button>
                        </li>
                    }
                </ul>
                <button type="button" onclick="addItem('income', @i)">Add Item</button>
            </div>
        }
    </div>
    <button type="button" onclick="addCategory('income')">Add Income Category</button>

    <h2>Expenses</h2>
    <div id="expenses-container">
        @for (int i = 0; i < Model.Budget.Expenses.Count; i++)
        {
            <div>
                <input asp-for="Budget.Expenses[i].Name" placeholder="Category Name" />
                <button type="button" onclick="removeCategory('expense', @i)">Remove</button>
                <ul id="expense-items-@i">
                    @for (int j = 0; j < Model.Budget.Expenses[i].Items.Count; j++)
                    {
                        <li>
                            <input asp-for="Budget.Expenses[i].Items[j].Name" placeholder="Item Name" />
                            <input asp-for="Budget.Expenses[i].Items[j].Amount" placeholder="Amount" />
                            <button type="button" onclick="removeItem('expense', @i, @j)">Remove</button>
                        </li>
                    }
                </ul>
                <button type="button" onclick="addItem('expense', @i)">Add Item</button>
            </div>
        }
    </div>
    <button type="button" onclick="addCategory('expense')">Add Expense Category</button>

    <button type="submit">Save Budget</button>
</form>

@section Scripts {
    <script src="js/site.js"></script>
}
